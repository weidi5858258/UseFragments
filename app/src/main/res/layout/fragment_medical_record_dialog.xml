<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen_8_dp"
        android:layout_marginEnd="@dimen/dimen_8_dp"
        android:gravity="left"
        android:orientation="vertical">

        <include
            android:id="@+id/input_layout_date"
            layout="@layout/item_medical_record_input"/>

        <include
            android:id="@+id/input_layout_leukocyte_count"
            layout="@layout/item_medical_record_input"/>

        <include
            android:id="@+id/input_layout_neutrophils"
            layout="@layout/item_medical_record_input"/>

        <include
            android:id="@+id/input_layout_hemoglobin"
            layout="@layout/item_medical_record_input"/>

        <include
            android:id="@+id/input_layout_platelet_count"
            layout="@layout/item_medical_record_input"/>

        <include
            android:id="@+id/input_layout_remarks"
            layout="@layout/item_medical_record_input"/>

        <include
            android:id="@+id/input_layout_other"
            layout="@layout/item_medical_record_input"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/medical_record_operate_btn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="增加"/>

            <Button
                android:id="@+id/medical_record_cancel_btn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="取消"/>
        </LinearLayout>

    </LinearLayout>

</ScrollView>
